{
  "description": "Right-Alt => Chat GPT / Right-Alt + H,J,K,L => Arrows",
  "enabled": true,
  "manipulators": [
    {
      "from": { "key_code": "right_alt" },
      "to": [{ "key_code": "right_alt" }],
      "to_if_alone": [
        {
          "key_code": "spacebar",
          "modifiers": ["left_command"]
        }
      ],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "h",
        "modifiers": {
          "mandatory": ["right_alt"],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "left_arrow" }],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "j",
        "modifiers": {
          "mandatory": ["right_alt"],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "down_arrow" }],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "k",
        "modifiers": {
          "mandatory": ["right_alt"],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "up_arrow" }],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "l",
        "modifiers": {
          "mandatory": ["right_alt"],
          "optional": ["any"]
        }
      },
      "to": [{ "key_code": "right_arrow" }],
      "type": "basic"
    }
  ]
}
